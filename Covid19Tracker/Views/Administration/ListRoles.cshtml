@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
    int i = 0;
    
}


    <div class="container-fluid">
        <!-- user table  -->
        <div class="panel panel-default mt-4">
            <div class="panel-heading main-color-bg">
                <h3 class="panel-title p-2">Users</h3>
            </div>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <input type="text" class="form-control mb-3" placeholder="Filter Page">
                    @if (Model.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th>Role Name</th>
                                    <th>Id</th>
                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var role in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@role.Name </td>
                                        <td>@role.Id</td>
                                        <td>

                                            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn"> <i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                                            <a class="btn" asp-action="EditRole" controller="Administration" asp-route-id="@role.Id"> <i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-header">
                                No Rooles Created Yet
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    Use the button below to create role
                                </h5>
                                <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">Create Role</a>
                            </div>
                        </div>
                    }
                </div>
            </div>




        </div>

        </div>