@model Covid19Tracker.Entities.Tracker.RealCases

@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">
    <h1>Edit</h1>

    <h4>CovidCase</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCases" class="row">
                <input type="hidden" asp-for="ID" />
                <div class="col-md-6 col-sm-12 mx-auto">

                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <select asp-for="State" class="form-control" asp-items="Html.GetEnumSelectList<Covid19Tracker.Entities.Tracker.States>()"></select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cases" class="control-label"></label>
                        <input type="text" class="form-control" asp-for="Cases" placeholder="Enter Recorverd Case" />
