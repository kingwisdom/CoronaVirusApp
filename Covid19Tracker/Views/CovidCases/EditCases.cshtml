                    </div>
                    <div class="form-group">
                        <label asp-for="Sick" class="control-label"></label>
                        <input type="text" class="form-control" asp-for="Sick" placeholder="Enter Sick Cases" />
                        <span asp-validation-for="Sick" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Recorvered" class="control-label"></label>
                        <input type="text" class="form-control" asp-for="Recorvered" placeholder="Enter Recorverd Case" />
                        <span asp-validation-for="Recorvered" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Death" class="control-label"></label>
                        <input type="text" class="form-control" asp-for="Death" placeholder="Enter Death Cases" />
                        <span asp-validation-for="Death" class="text-danger"></span>
                    </div>

