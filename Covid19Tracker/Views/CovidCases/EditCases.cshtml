                <label asp-for="Tested" class="control-label"></label>
                <input type="text" asp-for="Tested" placeholder="Enter Sick Cases" />
                <span asp-validation-for="Tested" class="text-danger"></span>
            </div>*@


                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-primary" />
                    </div>
                </div>



            </form>
        </div>
    </div>

    <div>
        <a asp-action="RealIndex">Back to List</a>
    </div>
</div>
