@model CasesViewModel

@{
    ViewData["Title"] = "Home Page";

    var sickbar = (Model.Sick / Model.All) * 100;
    var recoverbar = (Model.Recorverd / Model.All) * 100;
    var deathbar = (Model.Death / Model.All) * 100;
    
}

<!-- Begin Page Content -->
    <div class="container-fluid">


        <!-- Content Row -->
        <div class="row">

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">All Cases</div>
                                <div id="mainall" class="h5 mb-0 font-weight-bold text-gray-800">@Model.All</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-h-square fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Recovered Cases</div>
                                <div id="mainrecover" class="h5 mb-0 font-weight-bold text-gray-800">@Model.Recorverd</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-heart fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Sick Cases</div>
                                <div id="mainsick" class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sick</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-ambulance fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Death Cases</div>
                                <div id="maindeath" class="h5 mb-0 font-weight-bold text-gray-800">@Model.Death</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-times fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Row -->

        <div class="row">

            <!-- Area Chart -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Overview Graph</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Dropdown Header:</div>
                                <a class="dropdown-item" href="#">Action</a>

                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        @*<div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                        </div>*@

                        <h4 class="small font-weight-bold">Death <span id="deathhead" class="float-right"> @Model.getdeathbar %</span></h4>
                        <div class="progress mb-4">
                            <div id="deathbars" class="progress-bar bg-danger" role="progressbar" style="width:@Model.getdeathbar%" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h4 class="small font-weight-bold">Sick <span id="sickhead" class="float-right">@Model.getsickbar %</span></h4>
                        <div class="progress mb-4">
                            <div id="sickbars" class="progress-bar bg-warning" role="progressbar" style="width:@Model.getsickbar%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h4 class="small font-weight-bold">Recovered <span id="recoverhead" class="float-right">@Model.getrecoverbar %</span></h4>
                        <div class="progress mb-4">
                            <div id="recoverbars" class="progress-bar bg-success" role="progressbar" style="width: @Model.getrecoverbar%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Covid19 Cases Chart </h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Dropdown Header:</div>
                                <a class="dropdown-item" asp-controller="covidcases" asp-action="create">Add</a>

                            </div>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <input hidden value="" id="sick" />
                            <input hidden value="" id="recovered" />
                            <input hidden  value="" id="death" />
                            <canvas id="myPieChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                <i class="fas fa-circle text-warning"></i> Sick
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> Recorvered
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-circle text-danger"></i> Death
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Row -->
        <div class="row">

            <!-- Content Column -->
            <div class="col-md-6 mb-4">
                <div class="row">


                    <div class="col-md-12 mb-4">
                        <div class="card bg-gradient-info shadow">
                            <div class="card-body">
                                <strong>Nigeria Center for Disease Control (NCDC)</strong>
                                <div class="text-white mt-2">
                                    <p>Toll-Free Number: 0800-970000-10</p>
                                    <p>SMS (Text Message): 08099555577</p>
                                    <p> Website: https://ncdc.gov.ng/ </p>
                                    <p>E-mail: info@ncdc.gov.ng</p>
                                    <p>WhatsApp: 07087110839 <br /> (if outside of Nigeria – +234-708-711-0839)</p>
                                    <hr />
                                    <small>For More Infomation visit &nbsp;&nbsp; <a class="btn-link text-white" href="https://ng.usembassy.gov/u-s-citizen-services/covid-19-information/">https://ng.usembassy.gov/u-s-citizen-services/covid-19-information/</a></small>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <!-- Project Card Example -->

            </div>




            <div class="col-lg-6 mb-4">

                <!-- Illustrations -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Get Resource Links</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;" asp-append-version="true" src="~/theme/img/corona.jpg" alt="">
                        </div>

                    </div>
                </div>

                <!-- Approach -->


            </div>
        </div>
